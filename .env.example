# ===========================================
# OttoChain Services - Environment Variables
# ===========================================
# Copy to .env and fill in required values

# ---- Database ----
POSTGRES_USER=ottochain
POSTGRES_PASSWORD=  # REQUIRED: Set a strong password
POSTGRES_DB=ottochain
POSTGRES_PORT=5432
POSTGRES_HOST=localhost  # For exporters connecting from host

# ---- Redis ----
REDIS_PORT=6379
REDIS_HOST=localhost  # For exporters connecting from host

# ---- Metagraph Endpoints ----
METAGRAPH_ML0_URL=http://host.docker.internal:9100
METAGRAPH_DL1_URL=http://host.docker.internal:9400

# ---- Services Ports ----
GATEWAY_PORT=4000
BRIDGE_PORT=3030
INDEXER_PORT=3031

# ---- Monitoring (compose.monitoring.yml) ----
PROMETHEUS_PORT=9090
ALERTMANAGER_PORT=9093
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3000
ALERT_EXTERNAL_URL=localhost

# ---- Exporters (compose.exporters.yml) ----
NODE_EXPORTER_PORT=9100
POSTGRES_EXPORTER_PORT=9187
REDIS_EXPORTER_PORT=9121

# ---- Logging (compose.logging.yml) ----
LOKI_PORT=3100

# ---- Traffic Generator (compose.traffic.yml) ----
TRAFFIC_AGENT_COUNT=50
TRAFFIC_TPS=2
TRAFFIC_WORKFLOW_WEIGHTS=identity:30,token:25,fiber:20,marketplace:15,market:10
