# ===========================================
# OttoChain Services - Environment Variables
# ===========================================
# Copy to .env and fill in required values

# ---- Database ----
POSTGRES_USER=ottochain
POSTGRES_PASSWORD=  # REQUIRED: Set a strong password
POSTGRES_DB=ottochain
POSTGRES_PORT=5432

# ---- Redis ----
REDIS_PORT=6379

# ---- Metagraph Endpoints ----
METAGRAPH_ML0_URL=http://host.docker.internal:9200
METAGRAPH_DL1_URL=http://host.docker.internal:9400

# ---- Services Ports ----
GATEWAY_PORT=4000
BRIDGE_PORT=3030
INDEXER_PORT=3031

# ---- Traffic Generator (compose.traffic.yml) ----
TRAFFIC_AGENT_COUNT=50
TRAFFIC_TPS=2
TRAFFIC_WORKFLOW_WEIGHTS=identity:30,token:25,fiber:20,marketplace:15,market:10
